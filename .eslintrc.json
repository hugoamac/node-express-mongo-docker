{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true,
        "mocha": true
    },
    "extends": "standard",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "no-tabs": [
            0
        ],
        "indent": [
            "error",
            "tab"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "comma-dangle": [
            "error",
            "never"
        ],
        "semi": [
            "error",
            "always"
        ],
        "eol-last": [
            "error",
            "always"
        ],
        "curly": [
            "error",
            "all"
        ],
        "padded-blocks": [
            0
        ],
        "require-jsdoc": [
            "error",
            {
                "require": {
                    "FunctionDeclaration": true,
                    "MethodDefinition": true,
                    "ClassDeclaration": true,
                    "ArrowFunctionExpression": false,
                    "FunctionExpression": false
                }
            }
        ],
        "no-empty": [
            "error"
        ],
        "new-parens": [
            "error"
        ],
        "no-trailing-spaces": [
            0
        ],
        "space-before-function-paren": [
            0
        ],
        "no-unused-vars": [
            0
        ],
        "node/no-deprecated-api": [
            0
        ],
        "no-return-await": [
            0
        ]
    }
}